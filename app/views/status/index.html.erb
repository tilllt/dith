<script>

    $().ready(function() {     
    	      
      	$("[rel='popover']").popover({
			trigger: 'hover'
		});
		
	  	$('#myTab a').click(function (e) {
  	   		e.preventDefault()
  	  		$(this).tab('show')
    	});
    	
    	$(function() {
			$( "#partition" ).draggable();
		});
	});
</script>

<style>
  body {
    padding: 60px;
